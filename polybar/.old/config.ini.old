;==========================================================

[bar/main]
width = 100%
height = 28
offset-x = 0%
offset-y = 0%
bottom = false
fixed-center = false
line-size = 2

background = ${color.bg}
foreground = ${color.fg}

;==========================================================

font-0 = "Fantasque Sans Mono:pixelsize=10;3"
font-1 = "Iosevka Nerd Font:pixelsize=13;3"
font-2 = Font Awesome 5 Free Solid:style=Solid:size=14;4
font-3 = Font Awesome 5 Free:style=Regular:size=14;4
font-4 = Font Awesome 5 Brands:style=Regular:size=14;4

;==========================================================

enable-ipc = true
cursor-click = pointer

scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

;== Module Location ========================================================

modules-left = menu workspaces google github reddit
modules-right = battery date powermenu
 
;== Modules ========================================================

[module/menu]
type = custom/text
content = Prea multe iconite?
content-padding = 2
content-background = ${color.shade1}
content-foreground = ${color.fg}
click-left = ~/.config/polybar/scripts/menu
click-middle = ~/.config/polybar/scripts/menu_full
click-right = ~/.config/polybar/scripts/color-switch.sh

[module/workspaces]
